<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dialer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="itsco.edu.contactos.DialerActivity">

    <Button
        android:text="@string/btn_fin"
        android:layout_width="200px"
        android:layout_height="250px"
        android:id="@+id/btn_fin"
        android:background="@android:drawable/stat_sys_vp_phone_call"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/txt_numero"
        android:layout_alignStart="@+id/txt_numero"
        android:layout_marginStart="12dp" />

    <TextView
        android:text="TextView"
        android:layout_width="300px"
        android:layout_height="80px"
        android:layout_marginTop="36dp"
        android:id="@+id/txt_numero"
        android:textSize="18sp"
        android:layout_below="@+id/txt_nombre"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="500px"
        android:layout_height="100px"
        android:layout_marginTop="95dp"
        android:id="@+id/txt_nombre"
        android:textSize="24sp"
        android:layout_marginEnd="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
